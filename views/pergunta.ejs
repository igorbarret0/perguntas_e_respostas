<%- include ('partials/header') %>


<body>

    <%- include ('partials/navbar') %>


    <div class="container">
        <hr>
        <h1> <%= pergunta.titulo %> </h1>
        <p> <%= pergunta.descricao %> </p>
        <hr>

        <form action="/salvaresposta" method="post">
            <h3>
                Responda
            </h3>
            <label for="">Resposta: </label>
            <textarea placeholder="Digite sua resposta" class="form-control" name="corpo"></textarea>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-primary mt-2">Responder</button>
        </form>
        <hr>
        <h3>
            Respotas:
        </h3>
        <hr>

        <%respostas.forEach(resposta => { %>
            <br>
           <div class="card">
                <div class="card-body">
                    <p> <%= resposta.corpo %></p>
                </div>
           </div>
        <%}) %>
    </div>
    
</body>

<% - include ('partials/footer') %>